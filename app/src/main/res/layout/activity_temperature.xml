<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TemperatureActivity">

    <TextView
        android:id="@+id/cvtemp"
        android:layout_width="295dp"
        android:layout_height="72dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="257dp"
        android:text="Conversion des temperatures"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtxt"
        android:layout_width="260dp"
        android:layout_height="82dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="47dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/checkBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvtemp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="134dp"
        android:layout_height="0dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="366dp"
        android:text="Arrondir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxt" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="299dp"
        android:layout_height="179dp"
        android:layout_marginTop="442dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="273dp"
            android:layout_height="87dp"
            android:text="Celsisus-->Fahernheit" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="274dp"
            android:layout_height="82dp"
            android:text="Fahernheit-->Celsisus" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="154dp"
        android:layout_height="41dp"
        android:layout_marginBottom="22dp"
        android:text="Resultat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

</androidx.constraintlayout.widget.ConstraintLayout>